<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <menuitem id="menu_generic_resource_root"
        name="Generic Resources"
        parent="base.menu_custom" />

    <!-- generic.resource -->
    <!-- Tree view for generic.resource -->
    <record id="generic_resource_view_tree" model="ir.ui.view">
        <field name="name">generic.resource.tree</field>
        <field name="model">generic.resource</field>
        <field name="arch" type="xml">
            <tree string="Resources">
                <field name="display_name" string="Name"/>
                <field name="active" invisible="1"/>
                <field name="implementation_ids"/>
                <field name="res_type_id"/>
                <field name="res_model" invisible="1"/>
                <field name="res_id" widget="generic_m2o" model_field="res_model"/>
            </tree>
        </field>
    </record>
    <!-- Action for open implementations for specific interface -->
    <record id="action_generic_resource_2_generic_resource_implementation" model="ir.actions.act_window">
        <field name="name">Resource Implementations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">generic.resource.implementation</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('resource_id', '=', active_id)]</field>
    </record>
    <!-- Form view for generic.resource -->
    <record id="generic_resource_view_form" model="ir.ui.view">
        <field name="name">generic.resource.form</field>
        <field name="model">generic.resource</field>
        <field name="arch" type="xml">
            <form string="Resource">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button"
                                type="action"
                                name="%(generic_resource.action_generic_resource_2_generic_resource_implementation)d"
                                icon="fa-bars">
                            <field string="Implementations" name="implementation_count" widget="statinfo"/>
                        </button>
                        <button name="toggle_active" type="object"
                                class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"
                                options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="display_name" string="Name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="implementation_ids" invisible="1"/>
                        <field name="res_type_id"/>
                        <field name="res_model" invisible="1"/>
                        <field name="res_id" widget="generic_m2o" model_field="res_model" attrs="{'invisible': [('res_model', '=', False)]}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="generic_resource_action" model="ir.actions.act_window">
        <field name="name">Resources</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">generic.resource</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>


    <!-- generic.resource.implementation -->
    <!-- Tree view for generic.resource.implementation -->
    <record id="generic_resource_implementation_view_tree" model="ir.ui.view">
        <field name="name">generic.resource.implementation.tree</field>
        <field name="model">generic.resource.implementation</field>
        <field name="arch" type="xml">
            <tree string="Resources Implementations">
                <field name="display_name"/>
                <field name="resource_id"/>
                <field name="resource_interface_id"/>
                <field name="resource_impl_id" widget="generic_m2o" model_field="resource_impl_model"/>
                <field name="resource_impl_model" invisible="1"/>
            </tree>
        </field>
    </record>
    <!-- Form view for generic.resource.implementation -->
    <record id="generic_resource_implementation_view_form" model="ir.ui.view">
        <field name="name">generic.resource.implementation.form</field>
        <field name="model">generic.resource.implementation</field>
        <field name="arch" type="xml">
            <form string="Resource Implementation">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="display_name"/>
                        </h1>
                    </div>

                    <group colspan="4">
                        <field name="resource_id"/>
                        <field name="resource_interface_id"/>
                        <field name="resource_impl_id" widget="generic_m2o" model_field="resource_impl_model"  attrs="{'invisible': [('resource_impl_model', '=', False)]}"/>
                        <field name="resource_impl_model" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="generic_resource_implementation_action" model="ir.actions.act_window">
        <field name="name">Resource Implementations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">generic.resource.implementation</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>


    <!-- generic.resource.interface -->
    <!-- Tree view for generic.resource.interface -->
    <record id="generic_resource_interface_view_tree" model="ir.ui.view">
        <field name="name">generic.resource.interface.tree</field>
        <field name="model">generic.resource.interface</field>
        <field name="arch" type="xml">
            <tree string="Resource interfaces">
                <field name="code"/>
                <field name="model_id"/>
            </tree>
        </field>
    </record>
    <!-- Action for open implementations for specific interface -->
    <record id="action_gen_resource_interface_2_gen_resource_implementation" model="ir.actions.act_window">
        <field name="name">Resource Implementations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">generic.resource.implementation</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('resource_interface_id', '=', active_id)]</field>
    </record>
    <!-- Action for open resources for specific interface -->
    <record id="action_generic_resource_interface_2_generic_resource" model="ir.actions.act_window">
        <field name="name">Resources</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">generic.resource</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('implementation_ids.resource_resource_interface_id', '=', active_id)]</field>
    </record>
    <!-- Form view for generic.resource.interface -->
    <record id="generic_resource_interface_view_from" model="ir.ui.view">
        <field name="name">generic.resource.interface.form</field>
        <field name="model">generic.resource.interface</field>
        <field name="arch" type="xml">
            <form string="Resource Interface">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button"
                                type="action"
                                name="%(generic_resource.action_gen_resource_interface_2_gen_resource_implementation)d"
                                icon="fa-bars">
                            <field string="Implementations" name="implementation_count" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button"
                                type="action"
                                name="%(generic_resource.action_generic_resource_interface_2_generic_resource)d"
                                icon="fa-bars">
                            <field string="Resources" name="resource_count" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="code"/>
                        </h1>
                    </div>
                    <group>
                        <field name="model_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="generic_resource_interface_action" model="ir.actions.act_window">
        <field name="name">Resource Interfaces</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">generic.resource.interface</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>


    <!-- generic.resource.type -->
    <!-- Tree view for generic.resource.type -->
    <record id="generic_resource_type_view_tree" model="ir.ui.view">
        <field name="name">generic.resource.type.tree</field>
        <field name="model">generic.resource.type</field>
        <field name="arch" type="xml">
            <tree string="Resource types">
                <field name="model_id"/>
                <field name="resource_ids"/>
            </tree>
        </field>
    </record>
    <!-- Action to open resources from types -->
    <record id="action_generic_resource_type_2_generic_resource" model="ir.actions.act_window">
        <field name="name">Resources</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">generic.resource</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('res_type_id', '=', active_id)]</field>
    </record>
    <!-- Form view for generic.resource.type -->
    <record id="generic_resource_type_view_from" model="ir.ui.view">
        <field name="name">generic.resource.type.form</field>
        <field name="model">generic.resource.type</field>
        <field name="arch" type="xml">
            <form string="Resource Type">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button"
                                type="action"
                                name="%(generic_resource.action_generic_resource_type_2_generic_resource)d"
                                icon="fa-bars">
                            <field string="Resources" name="resource_count" widget="statinfo"/>
                        </button>
                    </div>
                    <group>
                        <field name="model_id"/>
                        <field name="resource_ids" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="generic_resource_type_action" model="ir.actions.act_window">
        <field name="name">Resource Types</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">generic.resource.type</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menus for Generic Resource -->
    <menuitem id="generic_resource_menu_item"
                name="Resources"
                parent="menu_generic_resource_root" sequence="5"
                action="generic_resource_action"/>
    <menuitem id="generic_resource_implementation_menu_item"
                name="Implementations"
                parent="menu_generic_resource_root" sequence="10"
                action="generic_resource_implementation_action"/>
    <menuitem id="generic_resource_interface_menu_item"
                name="Interfaces"
                parent="menu_generic_resource_root" sequence="15"
                action="generic_resource_interface_action"/>
    <menuitem id="generic_resource_type_menu_item"
                name="Types"
                parent="menu_generic_resource_root" sequence="20"
                action="generic_resource_type_action"/>
</odoo>
