<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <menuitem id="menu_generic_resource_root"
        name="Generic Resources"
        parent="base.menu_custom" />

    <!-- generic.resource -->
    <!-- Tree view for generic.resource -->
    <record id="generic_resource_view_tree" model="ir.ui.view">
        <field name="name">generic.resource.tree</field>
        <field name="model">generic.resource</field>
        <field name="arch" type="xml">
            <tree string="Resources">
                <field name="display_name" string="Name"/>
                <field name="active" invisible="1"/>
                <field name="implementation_ids"/>
                <field name="res_type_id"/>
                <field name="res_model" invisible="1"/>
                <field name="res_id" widget="generic_m2o" model_field="res_model"/>
            </tree>
        </field>
    </record>
    <!-- Action for open implementations for specific interface -->
    <record id="action_generic_resource_2_generic_resource_implementation" model="ir.actions.act_window">
        <field name="name">Resource Implementations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">generic.resource.implementation</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('resource_id', '=', active_id)]</field>
    </record>
    <!-- Form view for generic.resource -->
    <record id="generic_resource_view_form" model="ir.ui.view">
        <field name="name">generic.resource.form</field>
        <field name="model">generic.resource</field>
        <field name="arch" type="xml">
            <form string="Resource">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object"
                                class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"
                                options='{"terminology": "archive"}'/>
                        </button>
                        <button class="oe_stat_button"
                                type="action"
                                name="%(generic_resource.action_generic_resource_2_generic_resource_implementation)d"
                                icon="fa-bars">
                            <field string="Implementations" name="implementation_count" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="display_name" string="Name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="implementation_ids" invisible="1"/>
                        <field name="res_type_id"/>
                        <field name="res_model" invisible="1"/>
                        <field name="res_id" widget="generic_m2o" model_field="res_model" attrs="{'invisible': [('res_model', '=', False)]}"/>
                    </group>
                    <notebook>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="generic_resource_action" model="ir.actions.act_window">
        <field name="name">Resources</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">generic.resource</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menus for Generic Resource -->
    <menuitem id="generic_resource_menu_item"
                name="Resources"
                parent="menu_generic_resource_root" sequence="5"
                action="generic_resource_action"/>

</odoo>
